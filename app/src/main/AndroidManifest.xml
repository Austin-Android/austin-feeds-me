<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.utfeedsme"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <android:uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AustinFeedsMeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.utfeedsme.STARTSCREEN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HappeningNow"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.utfeedsme.HAPPENINGNOW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NearYou"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.utfeedsme.NEARYOU" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllEvents"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.utfeedsme.ALLEVENTS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddEvent"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.example.utfeedsme.ADDEVENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".addeditevent.AddEditEventActivity" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="${fabricApiKey}" />

        <activity android:name="com.firebase.ui.auth.twitter.TwitterPromptActivity" />
        <meta-data
            android:name="com.firebase.ui.TwitterKey"
            android:value="${twitterKey}"/>
        <meta-data
            android:name="com.firebase.ui.TwitterSecret"
            android:value="${twitterSecret}"/>
    </application>

</manifest>