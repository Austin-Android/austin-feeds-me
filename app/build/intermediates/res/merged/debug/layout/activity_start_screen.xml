<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#BF5700">
    
    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#FFFFFF"/>
    
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/clock_large"
        android:text="@string/happening_now"
        android:contentDescription="@string/happening_now"
        android:textSize="20sp"
        android:id="@+id/happening_now"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/name"
        android:background="@drawable/bkg"/>
    
    <TextView
        android:id="@+id/happening_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/happening_now"
        android:layout_below="@+id/happening_now"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:textColor="#FFFFFF"/>
        
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pin_large"
        android:text="@string/near_you"
        android:contentDescription="@string/near_you"
        android:textSize="20sp"
        android:id="@+id/near_you"
        android:layout_toRightOf="@+id/happening_now"
        android:layout_below="@+id/name"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="54dp"
        android:background="@drawable/bkg"/>
    
    <TextView
        android:id="@+id/near_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/near_you"
        android:layout_below="@+id/near_you"
        android:layout_toRightOf="@+id/happening_text"
        android:layout_marginLeft="37dp"
        android:layout_marginBottom="10dp"
        android:textColor="#FFFFFF"/>
    
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/list_large"
        android:text="@string/all_events"
        android:contentDescription="@string/all_events"
        android:layout_gravity="center" 
        android:textSize="20sp"
        android:id="@+id/all_events"
        android:background="@drawable/bkg"
        android:layout_below="@+id/happening_text"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="32dp"/>
    
    <TextView
        android:id="@+id/all_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_events"
        android:layout_below="@+id/all_events"
        android:layout_marginLeft="46dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="32dp"
        android:textColor="#FFFFFF"/>
    
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/plus"
        android:text="@string/add_event"
        android:contentDescription="@string/add_event"
        android:layout_gravity="center" 
        android:textSize="20sp"
        android:id="@+id/add_event"
        android:background="@drawable/bkg"
        android:layout_below="@+id/near_text"
        android:layout_toRightOf="@+id/all_events"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="5dp"/>
    
    <TextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_event"
        android:layout_below="@+id/add_event"
        android:layout_toRightOf="@+id/all_text"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="32dp"
        android:textColor="#FFFFFF"/>
    
</RelativeLayout>